{
  "compilerOptions": {
    "outDir": "build/dist",
    "typeRoots": ["/node_modules/@types/*", "/assets/ts/@types/*"],
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "rootDir": "./assets/ts",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": false,
    "baseUrl": "./assets/ts"
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "./assets/ts/setupTests.ts"
  ],
  "include": [
    "./assets/ts"
  ]
}
